<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeSalon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/lib/slick/slick.css">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon">
</head>
<body>
    <!-- Navigation -->
    <header class="navigation fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-white">
                <a class="navbar-brand order-1" asp-controller="Home" asp-action="Index">
                    <img class="img-fluid" width="100" src="~/images/finalLogo.png" alt="CoffeeSalon | Review Spot">
                </a>
                <div class="collapse navbar-collapse text-center order-lg-2 order-3" id="navigation">
                    <ul class="navbar-nav" style="margin-left: 100px;">
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Admin" asp-action="UsersAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Users</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="Admin" asp-action="ReviewsAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reviews</a>
                        </li>

                        <li class="nav-item dropdown" style="margin-left: 200px; line-height: 65px; font-weight:600">
                            Welcome - @ViewBag.UserName
                        </li>
                    </ul>
                </div>

                <div class="order-2 order-lg-3 d-flex align-items-center">
                    <ul class="navbar-nav" style="margin-left: 100px;">
                        @if (ViewBag.UserName != "" && ViewBag.UserName != null)
                        {
                            <li class="nav-item dropdown" style="margin-left:50px;">
                                <a class="nav-link" asp-controller="Home" asp-action="logout" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link" asp-controller="Home" asp-action="login" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- /navigation -->
    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer text-muted" style="position:unset;">
        <svg class="footer-border" height="214" viewBox="0 0 2204 214" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2203 213C2136.58 157.994 1942.77 -33.1996 1633.1 53.0486C1414.13 114.038 1200.92 188.208 967.765 118.127C820.12 73.7483 263.977 -143.754 0.999958 158.899" stroke-width="2" />
        </svg>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5 text-center text-md-left mb-4">
                    <ul class="mb-0" style="list-style-type:none; line-height:20px; text-align: left;">
                        <li>Developer:</li>
                        <li style="margin-top: 10px;">Shahbuddin, Sahil</li>
                        <li>JieLiang Xu</li>
                        <li>Ahmed, Rumsha</li>
                    </ul>
                </div>
                <div class="col-md-2 text-center mb-4">
                    <a href="index.html"><img class="img-fluid" width="100" src="~/images/finalLogo.png" alt="CoffeeSalon | ReviewSpot"></a>
                </div>
                <div class="col-md-5 text-md-right text-center mb-4">
                    <ul class="list-inline footer-list mb-0">
                        <li class="list-inline-item"><a href="#"><i class="ti-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-twitter-alt"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-linkedin"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-github"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="ti-youtube"></i></a></li>
                    </ul>
                </div>
                <div class="col-12">
                    <div class="border-bottom border-default"></div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/instafeed/instafeed.min.js"></script>

    <!-- Main Script -->
    <script src="~/js/script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
