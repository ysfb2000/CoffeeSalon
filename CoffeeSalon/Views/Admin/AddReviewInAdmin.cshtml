@{
	ViewData["Title"] = "Admin";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model CoffeeSalon.Models.Review

<h2>Create Review</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div>
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Image">Upload Image (optional)</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

